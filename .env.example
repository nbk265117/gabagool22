# Polymarket Configuration
# Your Ethereum private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Your funder address (the wallet holding USDC on Polymarket)
FUNDER_ADDRESS=your_funder_address_here

# Chain ID (137 for Polygon mainnet)
CHAIN_ID=137

# Bot Configuration
# Maximum pair cost to accept (0.99 = 1% profit margin)
MAX_PAIR_COST=0.99

# Maximum amount to spend per trade (in USDC)
MAX_TRADE_AMOUNT=10

# Maximum total exposure (in USDC)
MAX_TOTAL_EXPOSURE=1000

# Target quantity balance ratio (1.0 = perfectly balanced)
TARGET_BALANCE_RATIO=1.0

# Minimum profit to lock before stopping (in USDC)
MIN_PROFIT_TARGET=5

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
